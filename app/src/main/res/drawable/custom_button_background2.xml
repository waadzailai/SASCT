<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape>
            <solid android:color="#dc8c44"/>
            <stroke
                android:width="1dp"
                android:color="#ffffff"/>
            <corners android:radius="22dp"/>
            <padding
                android:left="6dp"
                android:top="6dp"
                android:right="6dp"
                android:bottom="6dp"/>
        </shape>
    </item>
    <!-- لون الدائرة عند عدم الضغط -->
    <item>
        <shape>
            <solid android:color="#e9edf6"/>
            <stroke
                android:width="1dp"
                android:color="#ffffff"/>
            <corners android:radius="22dp"/>
        </shape>
    </item>
</selector>
