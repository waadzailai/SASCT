<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here.-->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/white</item>
        <!-- Other style attributes -->
        <item name="popupTheme">@style/AppTheme.PopupOverlay</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>
    <style name="main_header">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#212121</item>
    </style>

    <!-- Style for Recipe Details Title -->
    <style name="RecipeDetailsTitle" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!-- Style for Recipe Details Text -->
    <style name="RecipeDetailsText" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!-- Style for Recipe Header Text -->
    <style name="recipe_header">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#212121</item>
    </style>

    <!-- Style for Recipe Description Text -->
    <style name="recipe_desc">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">#757575</item>
    </style>

    <!-- New Style for BottomNavigationView -->
    <style name="BottomNavStyle">
        <item name="android:background">@color/primary</item>

        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/white</item>
    </style>


    <!-- Primary Text Color -->
    <color name="primaryTextColor">#333333</color>

    <!-- Primary Color (used for button background) -->
    <color name="primaryColor">#007AFF</color>

    <!-- Secondary Text Color (used for links) -->
    <color name="secondaryTextColor">#999999</color>


</resources>
