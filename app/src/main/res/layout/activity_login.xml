<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E9EDF6"
    tools:context=".Login">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            app:srcCompat="@drawable/group2" />

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/backgroundLoginEmail"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="22dp"
                android:background="@drawable/background_edittext"
                android:elevation="6dp" />


            <EditText
                android:layout_marginBottom="20dp"
                android:id="@+id/editTextEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="27dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/custom_edittext_box"
                android:drawableTint="#948f8f"
                android:elevation="7dp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColorHint="#B9C6D7"
                android:textSize="12sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/backgroundPassword"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/background_edittext"
                android:elevation="6dp" />


            <EditText
                android:id="@+id/editTextPassword"
                android:layout_width="361dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/custom_edittext_box"
                android:drawableEnd="@drawable/icons8_eye_50__2_"
                android:drawableTint="#154278"
                android:elevation="7dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColorHint="#B9C6D7"
                android:textSize="12sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <TextView
            android:id="@+id/forgotPasswordTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="12dp"
            android:text="Forgot Password?"
            android:textColor="#dc8c44"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button android:textAllCaps="false"
            android:id="@+id/sendBtn"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/custom_button_2"
            android:elevation="6dp"
            android:gravity="center|center_vertical"
            android:text="Sign In"
            android:textColor="#154278"
            android:textSize="17sp"
            android:textStyle="normal|bold" />





        <LinearLayout
            android:layout_marginTop="60dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/signUpTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't have an account? "
                android:textColor="#7F7F7F"
                android:textSize="16sp"
                android:textStyle="normal|bold" />


            <TextView
                android:id="@+id/signUpET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:text="Sign Up"
                android:textColor="#dc8c44"
                android:textSize="16dp"
                android:textStyle="bold" />




        </LinearLayout>

</LinearLayout>